---
import KeepScrolling from '@/assets/arrow_bottom.svg'
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Landing GTA VI by @damadev</title>
	</head>
	<body>
		<slot />
		<KeepScrolling class="fixed bottom-4 left-0 right-0 mx-auto text-pink-300 drop-shadow-2xl animate-bounce-pulse"/>
	</body>
</html>

<style is:global>
	@import "tailwindcss";
	@theme {
		--font-sans: "GTA", system-ui, sans-serif;
		--font-narrow: "GTANarrow", system-ui, sans-serif;

		--animate-bounce-pulse: bounce-pulse 2s ease-in-out infinite;
	}

@keyframes bounce-pulse {
	0% {
		transform: translateY(0);
		scale: 0.8;
		opacity: 0.8;
	}

	50% {
		transform: translateY(-5px);
		scale: 1;
		opacity: 1;
	}

	100% {
		transform: translateY(0);
		scale: 0.8;
		opacity: 0.8;
	}
}

	html,
	body {
		width: 100%;
		height: 300vh;
		margin: 0;
		color: aliceblue;
		background: #111117;
		overflow-x: hidden;
		overscroll-behavior: none;

		@font-face {
			font-family: GTA;
			src: url("/font/gta-regular.woff") format("woff");
			font-weight: normal;
			font-style: normal;
			font-display: swap;
		}
		@font-face {
			font-family: GTA;
			src: url("/font/gta-bold.woff") format("woff");
			font-weight: bold;
			font-style: normal;
			font-display: swap;
		}
		@font-face {
			font-family: GTA;
			src: url("/font/gta-semibold.woff") format("woff");
			font-weight: 600;
			font-style: normal;
			font-display: swap;
		}
		@font-face {
			font-family: GTANarrow;
			src: url("/font/gta-narrow.woff") format("woff");
			font-weight: normal;
			font-style: normal;
			font-display: swap;
		}
	}
</style>
